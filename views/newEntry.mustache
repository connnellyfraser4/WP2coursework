<html lang="en">
<head>
{{>header}}
</head>
<body class="container">
<h2>Write a new entry</h2>
<form method="post" role="form">
 <div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control" id="name"
    name="name" placeholder="Enter your Name."
required>
 </div>
 <div class="form-group">
    <label for="activity">Activity</label>
    <input type="text" class="form-control" id="activity"
    name="activity" placeholder="Enter an activity."
required>
 </div>
 <div class="form-group">
    <label for="duration">Duration</label>
    <input type="text" class="form-control" id="duration"
    name="duration" placeholder="Enter exercise duration."
required>
 </div>
 <div class="form-group">
    <input type="submit" value="Post entry" class="btn btn-primary">
 </div>
</form>
</body>
</html>